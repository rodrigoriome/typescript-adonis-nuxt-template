{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": [
    "**/*"
  ],
  "exclude": [
    ".nuxt",
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "outDir": "build",
    "baseUrl": "./",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "Nuxt/*": [
        "./resources/web/*"
      ],
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@nuxt/types",
      "@types/node"
    ]
  }
}
